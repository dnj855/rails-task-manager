<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed ? "This task is completed" : "This task is not yet completed" %></p>

<%= link_to "Edit this task", edit_task_path(@task) %>
<%= link_to "Delete this task", task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Please confirm the task deletion !" } %>
<%= link_to "Back to list", tasks_path %>